<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/horizonal_record_item_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/coolman"
        />

    <TextView
        android:id="@+id/horizonal_record_item_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/horizonal_record_item_pic"
        android:gravity="left"
        android:text="动画I啊回到家啊还是大姐啥几点回家啊是的大j到家啊还是大姐啥几点回家啊是的大jdh"
        android:maxLines="4"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/horizonal_record_item_price_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:textSize="20sp"
        android:layout_toRightOf="@id/horizonal_record_item_pic"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/txt_price_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原价:"
        android:layout_toRightOf="@id/horizonal_record_item_price_sale"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/horizonal_record_item_price_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:layout_toRightOf="@id/txt_price_before"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        />

</RelativeLayout>