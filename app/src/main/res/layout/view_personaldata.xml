<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="用户名"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/txt_person_name"
            />

        <TextView
            android:id="@+id/txt_person_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txt_person_name"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"

            android:gravity="center"
            android:text="描述"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_person_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_person_name"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/txt_person_name"
            />

        <TextView
            android:id="@+id/txt_person_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txt_person_desc"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"

            android:gravity="center"
            android:text="手机号"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_person_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_person_desc"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/txt_person_name"
            />


        <TextView
            android:id="@+id/txt_person_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txt_person_phone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="性别"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_person_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_person_name"
            android:layout_below="@id/et_person_phone"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit_personaldata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:gravity="center"
        android:background="@drawable/btn_enabled_shape"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>